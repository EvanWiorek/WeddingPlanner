@model LoginUser

<div class="card">
  <div class="card-header">
    <h2>Login</h2>
  </div>
  <div class="card-body">
    <form asp-action="Login" asp-controller="LogReg" method="get">

      <div class="form-floating">
        <input asp-for="LogEmail" class="form-control" placeholder="Email:">
        <label asp-for="LogEmail">Email:</label>
        <span asp-validation-for="LogEmail" class="validation-text"></span>
      </div>
      
      <div class="form-floating mt-3">
        <input asp-for="LogPassword" class="form-control" placeholder="Password:">
        <label asp-for="LogPassword">Password:</label>
        <span asp-validation-for="LogPassword" class="validation-text"></span>
      </div>

      <input type="submit" value="Login" class="btn btn-primary mt-3">

    </form>
  </div>
</div>