@model User

<div class="card">
  <div class="card-header">
    <h2>Register</h2>
  </div>
  <div class="card-body">
    <form asp-action="CreateUser" asp-controller="LogReg" method="post">
      
      <div class="form-floating">
        <input asp-for="FirstName" class="form-control" placeholder="First Name:">
        <label asp-for="FirstName">First Name:</label>
        <span asp-validation-for="FirstName" class="validation-text"></span>
      </div>

      <div class="form-floating mt-3">
        <input asp-for="LastName" class="form-control" placeholder="Last Name:">
        <label asp-for="LastName">Last Name:</label>
        <span asp-validation-for="LastName" class="validation-text"></span>
      </div>

      <div class="form-floating mt-3">
        <input asp-for="Email" class="form-control" placeholder="Email:">
        <label asp-for="Email">Email:</label>
        <span asp-validation-for="Email" class="validation-text"></span>
      </div>
      
      <div class="form-floating mt-3">
        <input asp-for="Password" class="form-control" placeholder="Password:">
        <label asp-for="Password">Password:</label>
        <span asp-validation-for="Password" class="validation-text"></span>
      </div>
      
      <div class="form-floating mt-3">
        <input asp-for="PasswordConfirm" class="form-control" placeholder="Confirm Password:">
        <label asp-for="PasswordConfirm">Confirm Password:</label>
        <span asp-validation-for="PasswordConfirm" class="validation-text"></span>
      </div>

      <input type="submit" value="Register" class="btn btn-primary mt-3">

    </form>
  </div>
</div>